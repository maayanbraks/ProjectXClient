<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/userMail_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="android.studio@android.com"
        app:layout_constraintBottom_toTopOf="@+id/progressBar_DataSetTimeHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userName_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="User Name"
        app:layout_constraintBottom_toTopOf="@+id/userMail_head"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/userPic_head"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:maxHeight="90dp"
        android:maxWidth="90dp"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/outalk_logo"
        app:layout_constraintBottom_toTopOf="@+id/userName_head"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/outalk_logo" />

    <ProgressBar
        android:id="@+id/progressBar_DataSetTimeHeader"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
